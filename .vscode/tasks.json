{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build OpenGL Playground",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Debug"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run OpenGL Playground",
            "type": "shell",
            "command": "${workspaceFolder}\\build\\OpenGLPlayground.exe",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "dependsOn": "Build OpenGL Playground"
        },
        {
            "label": "Build and Run OpenGL Playground",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build OpenGL Playground",
                "Run OpenGL Playground"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
